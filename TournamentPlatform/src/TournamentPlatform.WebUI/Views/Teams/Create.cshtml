@model TournamentPlatform.WebUI.Models.TeamDetailsViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-4 justify-content-center">
        <div class="card">
            <div class="card-header text-center h4">
                Create teamViewModel
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Name" class="form-control" placeholder="Name"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Description" class="form-control" placeholder="Description"/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="file" name="logoPath" class="form-control-file"/>
                        <span asp-validation-for="LogoPath" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary w-100"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
