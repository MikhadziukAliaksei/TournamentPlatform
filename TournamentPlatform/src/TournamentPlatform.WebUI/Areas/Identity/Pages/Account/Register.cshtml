@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div id="logreg-forms">
    <form class="form-signin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Sign Up</h1>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <input asp-for="Input.Login" class="form-control" placeholder="Nickname" required="" autofocus="" />
        <span asp-validation-for="Input.Login" class="text-danger"></span>


        <input asp-for="Input.Email" class=" mt-2 form-control" placeholder="Email address" required="" autofocus="" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>


        <input asp-for="Input.Password" class="mt-2 form-control" placeholder="Password" required="" autofocus="" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>


        <input asp-for="Input.ConfirmPassword" class="mt-2 form-control" placeholder="Confirm password" required="" autofocus="" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

        <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-user-plus"></i> Sign Up</button>

        <a asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-angle-left"></i> Back</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}